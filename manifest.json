{
  "manifest_version": 3,
  "name": "Top of Mind",
  "version": "0.0.1",
  "description": "A tool to remember things you find online",
  "action": {
    "default_popup": "src/apps/popup/index.html",
    "default_title": "Remember with Tom"
  },
  "background": {
    "service_worker": "src/apps/background/index.ts",
    "type": "module"
  },
  "permissions": ["sidePanel", "storage"]
}
